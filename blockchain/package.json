{
  "name": "nobuntu-blockchain",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "etherlime ganache --networkId=1337",
    "start:dev": "run-p start deploy:local",
    "build": "etherlime compile --runs=999 --exportAbi",
    "deploy:local": "etherlime deploy --runs=500",
    "deploy:rinkeby": "etherlime deploy --network=rinkeby --runs=500",
    "deploy:rinkeby:debug": "node --inspect-brk ./node_modules/etherlime/cli.js --timeout 30000 deploy --network=rinkeby --runs=50",
    "test": "etherlime test --output=none --timeout 100000 --gas-report=true --runs=999",
    "test-one": "etherlime test test/anglo-rppVault/anglo-rppVault.test.js --output=none --timeout 100000 --gas-report=true --runs=999",
    "test-cov": "etherlime coverage --timeout 100000 --runs=999",
    "flat": "etherlime flatten ./basic-implementation/CyclicWithdraw.sol",
    "remixd": "remixd -s . --remix-ide https://remix.ethereum.org"
  },
  "author": "Linum Labs",
  "license": "MIT",
  "dependencies": {
    "bignumber.js": "9.0.0",
    "dotenv": "8.0.0",
    "etherlime": "2.2.0",
    "etherlime-lib": "1.1.3",
    "ethers": "4.0.31",
    "solc": "0.5.10",
    "openzeppelin-solidity": "2.3.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "3.7.2",
    "remixd": "0.1.8-alpha.14"
  }
}
